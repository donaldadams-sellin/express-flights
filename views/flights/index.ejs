<%- include('../partials/header.ejs') %>

    <h2>Flights</h2>

    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure Date</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f){ %>
                <tr style=<%= new Date()>f.departs ? "color:red" : "color:black" %> >
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= f.departs %></td>
                </tr>

            <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer.ejs') %>